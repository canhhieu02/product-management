mixin alert-success(time)
    - if (messages.success)
        .message.info
            div(
                class="alert alert-success"
                show-alert
                data-time= time
            ) #{messages.success} <span close-alert class="btn btn-danger btn-sm ml-1">X</span>

mixin alert-error(time)
    - if (messages.error)
        .message.info
            div(
                class="alert alert-danger"
                show-alert
                data-time= time
            ) #{messages.error} <span close-alert class="btn btn-danger btn-sm ml-1">X</span>