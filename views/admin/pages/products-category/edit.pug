extends ../../layouts/default.pug
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug

block main
    +alert-success(5000)
    +alert-error(5000)
    
    h1(class="mb-4") Chỉnh sửa danh mục sản phẩm

    form(
        action=`${prefixAdmin}/products-category/edit/${records.id}?_method=PATCH`
        id="form-edit-product"
        method="POST"
        enctype="multipart/form-data"
    )
        div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                value=records.title
            )
        div(class="form-group")
            label(for="parent_id") Danh mục cha
            select(
                class="form-control"
                id="parent_id"
                name="parent_id"
            )
                option(value="") - Chọn danh mục cha -
                + select-tree(newRecord, 1, records.parent_id)
        div(class="form-group")
            label(for="desc") Mô tả
            textarea(
                class="form-control textarea-mce"
                id="desc"
                name="description"
                rows="5"
            ) #{records.description}
    
        div(
            class="form-group"
            upload-image
        )
            label(for="thumbnail") Ảnh
            input(
                type="file" 
                class="form-control-file"
                id="thumbnail"
                name="thumbnail"
                accept="image/*"
                upload-image-input
            )
            img(
                src=records.thumbnail
                upload-image-preview
                class="image-preview"
            )
            button(
                type="button"
                close-image-preview
                class= "btn btn-danger btn-sm ml-1 d-none"
            ) X
        div(class="form-group")
            label(for="position") Vị trí
            input(
                type="number"
                class="form-control"
                id="position"
                name="position"
                placeholder="Tự động tăng"
                min="1"
                value=records.position
            )
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusActive"
                name="status"
                value="active"
                checked = (records.status == "active" ? true : false)
            )
            label(for="statusActive" class="form-check-label") Hoạt động
        div(class="form-group form-check form-check-inline")
            input(
                type="radio"
                class="form-check-input"
                id="statusInActive"
                name="status"
                value="inactive"
                checked = (records.status == "inactive" ? true : false)
            )
            label(for="statusInActive" class="form-check-label") Dừng hoạt động
        div(class="form-group")
            button(
                type="submit"
                class="btn btn-primary"
            ) Cập nhật
            a(
                href=`${prefixAdmin}/products-category`
                class="btn btn-primary ml-1"
            ) ⬅ Quay lại
    script(src="/admin/js/product.js")


