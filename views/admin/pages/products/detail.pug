extends ../../layouts/default.pug

block main
  .product-detail-container
    .product-card
      if (product.thumbnail)
        .product-image
          img(src=product.thumbnail alt=product.title)

      .product-info
        if (product.title)
          h1.product-title #{product.title}

        if (product.price)
          p.product-price Giá: 
            span #{product.price} $

        if (product.discountPercentage)
          p.product-discount Giảm giá: 
            span #{product.discountPercentage} %

        if (product.stock)
          p.product-stock Còn lại: 
            span #{product.stock}

        if (product.status)
          p.product-status Trạng thái: 
            if (product.status === "active")
              span.status-badge.active Hoạt động
            else
              span.status-badge.inactive Dừng hoạt động

        if (product.position)
          p.product-position Vị trí: 
            span #{product.position}

        if (product.description)
          .product-description
            h3 Mô tả sản phẩm
            div!= product.description

        // nhóm button
        .action-buttons
          a(
            href=`${prefixAdmin}/products`
            class="btn-back"
          ) ⬅ Quay lại
          a(
            href=`${prefixAdmin}/products/edit/${product.id}`
            class="btn-edit"
          ) ✏️ Chỉnh sửa
